<div class="rows">
  
  <p id="notice"><%= notice %></p>
  
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Date</th>
        <th>Attend</th>
        <th>Quit</th>
        <!-- <th>Reststart</th> -->
        <!-- <th>Restend</th> -->
        <!-- <th>RestTime</th> -->
        <th>Total</th>
        <th>Wage</th>
        <th colspan="2"></th>
      </tr>
    </thead>
  
    <tbody>
      <% sum_salary = 0 %>
      <% @cards.each do |card| %>
      <%
        rest_time = ((card.restend - card.reststart) / 3600).round(1)
        work_time = (((card.end - card.start) - (card.restend - card.reststart)) / 3600).round(1)
        salary = work_time * 2000
        sum_salary = sum_salary += salary
      %>
        <tr>
          <td><%= card.date %></td>
          <td><%= card.start.to_s(:published_time) %></td>
          <td><%= card.end.to_s(:published_time) %></td>
          <!-- <td><%= card.reststart.to_s(:published_time) %></td> -->
          <!-- <td><%= card.restend.to_s(:published_time) %></td> -->
          <!-- <td><%= rest_time %></td> -->
          <td><%= work_time %></td>
          <td><%= salary.round %></td>
          <td><%= link_to 'Edit', edit_card_path(card) %></td>
          <td><%= link_to card, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs', :method => :delete do %>
            <i class="glyphicon glyphicon-minus"></i>
          <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <p>合計: <span class="glyphicon glyphicon-jpy" aria-hidden="true"></span><strong><%= sum_salary.round %></strong></p>
  
  <br>
  
  <%= link_to 'New Card', new_card_path, class: 'btn btn-primary btn-lg' %>

</div>