<div class="rows">
  
  <p id="notice"><%= notice %></p>
  
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Date</th>
        <th>Attend</th>
        <th>Quit</th>
        <th>Time</th>
        <th>Wage</th>
        <th colspan="2"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @sum_salary = 0; @sum_time = 0; @cards.each do |card| %>
        <%= render partial: 'table_row', locals: {card: card} %>
      <% end %>
    </tbody>
  </table>
  
  <p>合計労働時間: <strong><%= @sum_time.round %></strong></p>
  <p>合計金額: <span class="glyphicon glyphicon-jpy" aria-hidden="true"></span><strong><%= @sum_salary.round %></strong></p>
  
  <br>

</div>